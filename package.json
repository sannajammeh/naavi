{
  "name": "navi",
  "version": "0.0.1",
  "description": "WAI-ARIA compliant navigation menu components for React. Full keyboard navigation, hover state machine, nested submenus, and polymorphic rendering.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/skala-org/navi"
  },
  "homepage": "https://github.com/skala-org/navi#readme",
  "bugs": {
    "url": "https://github.com/skala-org/navi/issues"
  },
  "keywords": [
    "react",
    "navigation",
    "menu",
    "menubar",
    "wai-aria",
    "accessible",
    "a11y",
    "keyboard-navigation",
    "dropdown",
    "submenu"
  ],
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "devDependencies": {
    "@base-ui/react": "^1.1.0",
    "@happy-dom/global-registrator": "^20.5.2",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "latest",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "bunchee": "^6.9.4",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "peerDependencies": {
    "@base-ui/react": "^1.1.0",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "typescript": "^5"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bunchee",
    "dev": "frunk [dev:*]",
    "dev:library": "bun --hot playground/server.ts",
    "dev:docs": "bun --hot docs/server.tsx",
    "dev:reference": "PORT=3001  bun run wai-aria-spec/index.html",
    "build:docs": "bun docs/build.tsx",
    "typecheck": "bunx tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "type": "module",
  "types": "./dist/index.d.ts"
}
